# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080

# Database Configuration
DB_CONN_STRING=postgres://username:password@localhost:5432/dbname

# Neo4j Configuration
NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-password

# JWT Configuration
JWT_SECRET=your-jwt-secret

# AI Provider Selection
AI_PROVIDER=openai-compatible  # Options: ollama, openai-compatible

# OpenAI-compatible Configuration (when AI_PROVIDER=openai-compatible)
API_KEY=your-api-key
API_URL=https://api.openai.com/v1
MODEL_NAME=gpt-3.5-turbo
EMBEDDING_MODEL=text-embedding-ada-002

# Ollama Configuration (when AI_PROVIDER=ollama)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL_NAME=llama2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
